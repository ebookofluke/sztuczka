<%= simple_form_for @news, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :foto_news, as: :file %>
  <%= f.input :co %>
  <%= f.input :kiedy %>
  <%= f.input :czego %>
  <%= f.input :link %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                news_index_path, :class => 'btn btn-default' %>
<% end %>
