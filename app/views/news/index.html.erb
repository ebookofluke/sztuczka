<% if can? :update, @news %>
<%= link_to 'nowy',
    new_news_path,
    :class => ' margin-top btn  btn-lg btn-primary ' %>
<% end %>

<table class="table ">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td>  <%= link_to image_tag(news.foto_news.url(:kolo), class: ''), news.link %></td>
        <td><%= news.co %></td>
        <td><%= news.kiedy %></td>
        <td class="tel" ><%= link_to news.czego, news.link %></td>

        <% if can? :update, @news %>

        <td>
          <td><%= link_to 'zobacz', news_path(news), :class => 'btn btn-default btn-lg  '  %></td>
        <td>  <%= link_to 'edytuj', edit_news_path(news), :class => 'btn btn-warning btn-lg ' %></td>
          <td><%= link_to 'kasowanko', news_path(news),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-lg  btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
