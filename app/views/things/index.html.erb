<p id="notice"><%= notice %></p>

<h1>Listing Things</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opisik</th>
      <th>Opis</th>
      <th>Mete</th>
      <th>Recenzja</th>
      <th>Rodzaj</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.title %></td>
        <td><%= thing.opisik %></td>
        <td><%= thing.opis %></td>
        <td><%= thing.mete %></td>
        <td><%= thing.recenzja %></td>
        <td><%= thing.rodzaj %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

