<%- model_class = Thing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:opisik) %></th>
      <th><%= model_class.human_attribute_name(:opis) %></th>
      <th><%= model_class.human_attribute_name(:mete) %></th>
      <th><%= model_class.human_attribute_name(:recenzja) %></th>
      <th><%= model_class.human_attribute_name(:rodzaj) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= link_to thing.id, thing_path(thing) %></td>
        <td><%= thing.title %></td>
        <td><%= thing.opisik %></td>
        <td><%= thing.opis %></td>
        <td><%= thing.mete %></td>
        <td><%= thing.recenzja %></td>
        <td><%= thing.rodzaj %></td>
        <td><%=l thing.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      thing_path(thing), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_thing_path(thing), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      thing_path(thing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_thing_path,
            :class => 'btn btn-primary' %>
