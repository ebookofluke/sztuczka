<%- model_class = Thing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @thing.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opisik) %>:</strong></dt>
  <dd><%= @thing.opisik %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opis) %>:</strong></dt>
  <dd><%= @thing.opis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mete) %>:</strong></dt>
  <dd><%= @thing.mete %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recenzja) %>:</strong></dt>
  <dd><%= @thing.recenzja %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rodzaj) %>:</strong></dt>
  <dd><%= @thing.rodzaj %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              things_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_thing_path(@thing), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              thing_path(@thing),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
